@{
    ViewData["Title"] = "Login";
}
<h2>@ViewData["Title"]</h2>
<form method="post" action="/Account/Login">
    <div class="form-group row">
        <label for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Email" name="Email" required autocomplete="username">
        </div>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <div class="col-sm-10"></div>
            <input type="password" class="form-control" id="Password" name="Password" required autocomplete="current-password">
        </div>
    </div>
    <button type="submit" class="btn btn-Primary">Login</button>
    <div class="links">
        <a href="@Url.Action("ResetPasswordView", "View")" class="btn btn-primary btn-lg active">Reset Password?</a>
        <a href="@Url.Action("ForgotUsernameView", "View")" class="btn btn-primary btn-lg active">Forgot Username?</a>
        <a href="@Url.Action("Register", "View")" class="btn btn-primary btn-lg active">Register</a>
    </div>
</form>
