<!DOCTYPE html>
<html lang="en">
@{
    ViewData["Title"] = "Enter your new password and click Reset Password.";
}
<h2>@ViewData["Title"]</h2>
<form method="post" asp-action="PasswordResetConfirm">
    <input type="hidden" asp-for="Token" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="NewPassword">New Password</label>
        <input type="password" asp-for="NewPassword" class="form-control" required="NewPassword" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm New Password</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" required="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>
</html>